{
    "name": "My top 10 most-watched Twitch streamers",
    "description": "Compiles a top 10 of your most watched Twitch streamers and displays it into a graph.",
    "version": "1.2",
    "manifest_version": 3,
    "permissions": ["storage"],
    "icons": { "16": "icon16.png",
      "48": "icon48.png",
     "128": "icon128.png" },
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.twitch.tv/*"
        ],
        "js": ["content-script.js"]
      }
    ]
  }